<Window x:Class="CoffeeFlow.Views.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Get Started" Height="800" Width="600" ResizeMode="NoResize">
    <Grid Background="#FF272323">
        <Grid.RowDefinitions>
            <RowDefinition Height="700"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Fill" Grid.Row="0"  Source="/CoffeeFlow;component/Resources/infoGuide123.jpg"/>
        <Button Width="100" Height="30" Content="Okay" Grid.Row="1" Style="{StaticResource DarkButton}" Click="ButtonBase_OnClick"></Button>
    </Grid>
</Window>
